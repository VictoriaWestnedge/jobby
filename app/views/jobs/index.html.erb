                                  class: "form-control",
                                  placeholder:t("SearchForAJob"),
                                  value: params[:query],
                data: {
                  search_jobs_target: "input",
                  action: "keyup->search-jobs#update"
                  } %>
          <%= link_to t("back"), root_path, class: "btn btn-success mt-3" %>
          </div>
          <% end %>
          <div>
          <%= render "list", jobs: @jobs %>
        </div>


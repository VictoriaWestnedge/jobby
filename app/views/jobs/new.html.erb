<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>
<div class="container">
  <div class="row mt-3 mb-4">
    <div class="col">
      <h2> New Job </h2>
      <%= simple_form_for @job  do |f| %>

        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :city %>
        <%= f.input :category, collection: ['painting', 'babysitting', 'deliveries', 'cleaning', 'petsitting', 'others'], include_blank: false, label: 'Categorys' %>
        <%= f.input :qty_hour %>
        <%= f.input :price_per_hour %>
        <%= f.input :start_date, html5:true %>
        <%= f.input :end_date, html5:true %>
        <%= f.input :start_time %>
        <%= f.input :end_time %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-success" %>

      <% end %>
      <%= link_to "Back", jobs_path %>
    </div>
  </div>
</div>

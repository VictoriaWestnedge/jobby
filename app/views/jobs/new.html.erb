<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>
<div class="container">
  <div class = "form">
    <div class="row mt-3 mb-4">
      <div class="col">
        <h2> <%= t("newjob") %> </h2>
        <%= simple_form_for @job  do |f| %>

          <%= f.input :name, label: t("name")  %>
          <%= f.input :address, label: t("address")  %>
          <%= f.input :city, label: t("city")  %>
          <%= f.input :category, collection: [t('painting'), t('babysitting'), t('deliveries'), t('cleaning'), t('petsitting'), t('others')], include_blank: false, label: t('category') %>
          <%= f.input :qty_hour, label: t("qtyhour")  %>
          <%= f.input :price_per_hour, label: t("price")  %>
          <%= f.input :start_date, html5:true, label: t("startdate")  %>
          <%= f.input :end_date, html5:true, label: t("enddate")  %>
          <%= f.input :start_time, label: t("starttime")  %>
          <%= f.input :end_time, label: t("endtime")  %>
          <%= f.input :description, label: t("description")  %>
          <%= f.input :photo, as: :file, label: t("photo") %>
          <%= f.submit t("createjob"), class: "btn btn-success" %>

        <% end %>

        <%= link_to t("back"), my_jobs_path, class: "btn btn-secondary mt-2" %>
      </div>
    </div>
  </div>
</div>

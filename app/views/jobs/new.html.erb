<div class="container">
  <div class="row mt-3 mb-4">
    <div class="col">
      <h2> New Job </h2>
      <%= simple_form_for @job  do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :city %>
        <p>Categories</p>
        <select class="form-control">
        <option>painting</option>
        <option>babysitting</option>
        <option>deliveries</option>
        <option>cleaning</option>
        <option>petsitting</option>
        <option>others</option>
        </select>
        <p></p>
        <%= f.input :qty_hour %>
        <%= f.input :price_per_hour %>
        <%= f.input :start_date, html5:true %>
        <%= f.input :end_date, html5:true %>
        <%= f.input :start_time %>
        <%= f.input :end_time %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-success" %>
      <% end %>
      <%= link_to "Back", jobs_path %>
    </div>
  </div>
</div>

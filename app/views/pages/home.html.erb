
<%# <!-- Hero Unit -->
<div class="contenedorhome"> %>
<div class="hero-unit">


    <hgroup>
      <h1>Jobby</h1>
      <h3 class="custom-link"><%= t("yourtemporaryjobsearchplatform") %></h3>
      <div class="options">
        <div class="option1">
          <%= link_to t("publishajobhere"), new_job_path, class: "btn5 btn btn-success " %>
        </div>
        <div class="option2">
          <%= link_to t("lookforajobhere"), jobs_path, class: "btn5 btn btn-success " %>
        </div>
      </div>
    </hgroup>

      <ul class="small-block-grid-2 medium-block-grid-3 flip-cards">
        <li ontouchstart="this.classList.toggle('hover');">
          <div class="large button card-front">
            <%= link_to t("babysitting"), jobs_path(query: 'babysitting'), style: "text-decoration:none" %>
            <i class="fa fa-solid fa-baby card-icon"></i>
          </div>

          <div class="panel card-back">
            <i class="fa fa-solid fa-baby card-icon"></i>
            <div class="hub-info">
              <%= link_to t("babysittingdescription"), jobs_path(query: 'babysitting'), style: "text-decoration:none" %>
            </div>
          </div>
        </li>

        <li ontouchstart="this.classList.toggle('hover');">
          <div class="large button card-front">
            <%= link_to t("painting"), jobs_path(query: 'painting'), style: "text-decoration:none" %>
            <i class="fa fa-solid fa-brush card-icon"></i>
          </div>

          <div class="panel card-back">
            <i class="fa fa-solid fa-brush card-icon"></i>
            <div class="hub-info">
              <%= link_to t("paintingdescription"), jobs_path(query: 'painting'), style: "text-decoration:none" %>
            </div>
          </div>
        </li>


        <li ontouchstart="this.classList.toggle('hover');">
          <div class="large button card-front">
            <%= link_to t("cleaning"), jobs_path(query: 'cleaning'), style: "text-decoration:none" %>
            <i class="fa fa-solid fa-broom card-icon"></i>
          </div>
          <div class="panel card-back">
            <i class="fa fa-solid fa-broom card-icon"></i>
            <div class="hub-info">

              <%= link_to t("cleaningdescription"), jobs_path(query: 'cleaning'), style: "text-decoration:none" %>
            </div>
          </div>
        </li>






      </ul>


</div>

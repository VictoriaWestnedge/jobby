<div class="simple-calendar">
  <div class="d-flex align-items-center justify-content-between">
    <div class="calendar-heading my-2">
      <%= link_to t('simple_calendar.previous', default: t("previous")), calendar.url_for_previous_view, class: 'btn btn-outline-primary' %>
      <span class="calendar-title btn btn-primary"><%= t('date.month_names')[start_date.month].titleize %> <%= start_date.year %></span>
      <%= link_to t('simple_calendar.next', default: t("next")), calendar.url_for_next_view, class: 'btn btn-outline-primary' %>
    </div>
    <%= link_to t("createmeeting"), new_meeting_path, class: 'btn btn-outline-warning' %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t("monday") %></th>
        <th><%= t("tuesday") %></th>
        <th><%= t("wednesday") %></th>
        <th><%= t("thursday") %></th>
        <th><%= t("friday") %></th>
        <th><%= t("saturday") %></th>
        <th><%= t("sunday") %></th>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |dates| %>
        <tr>
          <% dates.each do |date| %>
            <%= content_tag :td, class: calendar.td_classes_for(date) do %>
              <% passed_block.call date.day, sorted_events.fetch(date, []) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

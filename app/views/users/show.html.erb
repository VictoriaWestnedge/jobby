<div class="container">
  <div class="row mt-3 mb-4">
    <div class="col-12">
      <h1><%= @user.nickname %>
      <% if current_user.id == @user.id %>
      <% else %>
        <h3> Create New Review </h3>
        <%= simple_form_for([@user, @review]) do |f| %>
          <%= f.input :description %>
          <%= f.input :rating_star, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
      <% end %>
      <h3><%= pluralize @user.reviews.size, "review" %></h3>
      <% if @user.reviews.blank? %>
        <% if current_user.id == @user.id %>
          <p>My reviews</p>
          <p>You currently have no reviews</p>
        <% else %>
          <p>Be the first to leave a review for <%= @user.nickname %></p>
        <% end %>
      <% else %>







        <% @user_reviews.each do |review| %>
          <% rating = 5 - review.rating_star %>
          <div class="star-rating">
            <%="#{'★' * review.rating_star}#{'☆' * rating}"%>
          </div>


          <p><%= review.description %>
          <p>Rating on  <%= review.created_at.strftime('%d/%m/%Y') %></p></p>
          <%# <%= @date %>
          <%# <><%=review.created_at %>
        <% end %>
      <% end %>
      <%= link_to "Back to all users", users_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
